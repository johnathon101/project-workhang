<h1>GROUPS</h1>
  <a href="/groups/new"><div id="green_button">create a group</div></a>
<% @groups.each do |group| %>
<h2><%= group.name %></h2>
  <p><%= group.desc %></p>
<div id="members">
  <% @members = group.users %>
  <% @members.each do |member| %>
  <% @member_checked_in = true %>
  <% @email = member.email %>
  <% if @member_checked_in %>
    <div id="green_avatar">
      <a href="/users/<%= member.id %>"><img src="<%= Gravatar.new("#{@email}").image_url + "?s=75" %>"></a>
    </div>
  <% else %>
    <div id="gray_avatar">
      <a href="/users/<%= member.id %>"><img src="<%= Gravatar.new("#{@email}").image_url + "?s=75" %>"></a>
    </div>
  <% end %>
</div>
<% end %>
<% @is_member = Member.where("user_id = ?", current_user.id).where("group_id = ?", group.id) %>
  <% if current_user.id == group.mod %>
    <div id="gray_button">
      <a href="/groups/<%= group.id %>/edit">edit</a>
    </div>
  <% elsif @is_member != [] %>
    <div id="red_button">
      <%= link_to("leave", "/groups/#{group.id}/leave", :method => :leave) %>
    </div>
  <% else %>
    <div id="green_button">
      <%= link_to("join", "/groups/#{group.id}/join", :method => :join)%>
    </div>
  <% end %>
  <hr>
<% end %>