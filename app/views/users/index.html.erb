<h1 id="label">USERS</h1>
<% @users.each do |user| %>
  <p>
    <!-- TODO link to gravatar -->
    <!-- TODO instead of user.fname, link to @full_name method in helper later -->
    <a href="/users/<%= user.id %>"><img src="<%= Gravatar.new("#{user.email}").image_url + "?s=75" %>">
