<h1>MY INFO</h1>

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error_msg| %>
      <em><%= error_msg %>!</em>
    <% end %>
  <% end %>
  
  <p>
    <%= f.label "If you do not have gravatar and would like to provide your own" %>
    <%= f.label "upload PLACEHOLDER" %>
  </p>

  <p>
    <%= f.label "bio:" %>
    <%= f.text_field :bio %>
  </p>
  
  <p>
    <%= f.label "projects (include links):" %>
    <%= f.text_field :projects %>
  </p>
  
  <p>
    <%= f.label "website (http://yoursite.com):" %>
    <%= f.text_field :website %>
  </p>
  
  <p>
    <%= f.label "twitter (@handle):" %>
    <%= f.text_field :twitter %>
  </p>
  
  <p>
    <%= f.label "would you mentor during work/hangs?" %>
    <%= f.radio_button("user", "mentor", "yes") %>
    <%= f.radio_button("user", "mentor", "no") %>    
  </p>
  
  <%= f.submit "Sign up!"%>
<% end %>