
<h1><%= @place.name %></h1>
<h3><%= @place.street %></h3>
<br>
<%= link_to("Been Here? Review This Place!", :make_review(@place.id)) %>
<p>Google Reference Image:</p>
<img src= <%= @imgloc %> />

<h4><%= @review.title %></h4>
<h5><%= @review.content %></h5>
<% reviewer=User.find_by_id(@review.user_id) %>
<h5>by: <%= reviewer.name  %></h5>


<% if @check_ins == [] %>
  <%= link_to("Check in!", checkin_path(@place.id), :method => :post) %>
<% else %>
  <%= link_to("Check out!", :checkout, :method => :get) %>
<% end %>




