
<% @place=Place.find(params["format"]) %>
<p>REVIEW : <%= @place.name.upcase %></p>
<%= binding.pry %>
    <%= form_for @review, :url => {:action => 'new_review'} do |r| %>
      <% if @review.errors.any? %>
        <%@review.errors.full_messages.each do |error_msg| %>
          <p><%= error_msg %></p>
        <% end %>
      <% end %>
  
  <p>
    <%= r.label :title %>
    <%= r.text_field :title %>
  </p>
  
  <p>
    <%= r.label :content %>
    <%= r.text_field :content %>
  </p>
  <%= r.hidden_field :place_id, :value => @place.id %>

    <%= r.submit %>
<% end %>
 